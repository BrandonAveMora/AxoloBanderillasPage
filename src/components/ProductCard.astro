---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  emoji: string;
}

const { title, description, imageUrl, emoji } = Astro.props;
---

<div class="card hover:shadow-lg group">
  <div class="aspect-square rounded-xl overflow-hidden mb-4">
    <img 
      src={imageUrl} 
      alt={title} 
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
    />
  </div>
  
  <div class="flex items-center mb-2">
    <span class="text-2xl mr-2">{emoji}</span>
    <h3 class="text-xl font-bold text-axolo-brown">{title}</h3>
  </div>
  
  <p class="text-axolo-brown/80">
    {description}
  </p>
</div>