---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Axolo Banderillas - Banderillas Coreanas y más" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="Axolo Banderillas - Deliciosas banderillas coreanas y más en Tampico. ¡Ordena ahora en DiDi Food!" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Paytone+One&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-axolo-white min-h-screen">
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>